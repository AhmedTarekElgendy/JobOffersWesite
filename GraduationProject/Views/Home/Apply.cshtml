@{
    ViewBag.Title = "Apply";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h2 style="margin-top:100px;">Apply</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div>
            @{ 
                if (ViewBag.Result != null)
                {
                    <h3>@ViewBag.Result</h3>
                }
            }
        </div>
        @Html.ValidationSummary(true)
        <div class="form-group">
            <h3>What makes you the ideal candidate for this position?</h3>
            <div class="col-md-10">
                @Html.TextArea("Message", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("Message", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Apply" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
