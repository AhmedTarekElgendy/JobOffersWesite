@model IEnumerable<GraduationProject.Models.Category>
@{
    ViewBag.Title = "Home Page";
}



 <!--Start Header-->
      <div class="HeaderImg">
            <div class="OverlayImg">
                <div class="owl-carousel owl-theme Header">
    <div class="item"><img class="MYIMG" src="https://ak4.picdn.net/shutterstock/videos/12560294/thumb/1.jpg"></div>

    <div class="item"><img class="MYIMG" src="https://www.cyclicx.com/wp-content/uploads/2014/05/how-to-evaluate-a-job-offer.jpg"></div>
    
    <div class="item"><img class="MYIMG" src="https://www.accountingweb.com/sites/default/files/styles/banner/public/hiring_zakokor.jpg?itok=m0438_Tt"></div>
   
            </div>
               
                <script src="~/Scripts/jquery-3.3.1.min.js"></script>
                <script src="~/Scripts/owl/owl.carousel.min.js"></script>
                 <script src="~/Scripts/app.js"></script>
            </div>
        </div>
        <!--End Header-->


<div class="jumbotron alert alert-info">
    <h2>Welcome with you in JoBest</h2>
    <p class="lead">You Can Publish Your Job And Hire Employer</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg"> Show More &raquo;</a></p>
</div>

@foreach (var item in Model)
{
    <div class="panel panel-info">
    <div class="panel-heading"><h1>@Html.DisplayFor(modelitem => item.CategoryName)</h1></div>
    
    <div class="row panel-body">
        <h5>@Html.DisplayFor(modelitem => item.CategoryDescription)</h5>
        @foreach (var subitem in item.Jobs)
        {

        <div class="col-md-3 thumbnail" style="margin-left:20px; margin-bottom:20px; min-height:380px;">
            <img src="~/Uploads/@subitem.JobImage" style="height:200px; width:200px; margin-top:10px;" />
            <h3>@Html.DisplayFor(modelitem => subitem.JobTitle)</h3>
            <h5>@Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(model => subitem.JobContent).ToString()))</h5>
            @Html.ActionLink("Details...", "Details", new { JobId = subitem.Id }, new { @class = "btn btn-primary" })
        </div>

        }
    </div>
        </div>
}
