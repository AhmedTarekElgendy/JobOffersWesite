@model GraduationProject.Models.Profile

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h2 style="margin-top:100px;">@ViewBag.Title.</h2>
<hr />

<h3>Are you sure you want to delete this job ? </h3>
<div class="JobDeleteDiv">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.img)
        </dt>

        <dd>
            <img src="~/Uploads/Profile/@Html.DisplayFor(model => model.img)" class="thumbnail"
                 style="height:100px; width:100px;" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Title
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Bio)
        </dt>

        <dd>
            @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(model => model.Bio).ToString()))
        </dd>

        
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-default" /> 
        @Html.ActionLink("My Profile", "Details", new { id = Model.id }, new { @class = "btn btn-primary" })
    </div>
    }
</div>
