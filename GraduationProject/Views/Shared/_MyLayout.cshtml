    <body>

        <!--NavBarr-->
        <nav class="navbar navbar-default navbar-fixed-top" id="navbar">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="~/Home" class="navbar-brand">
                        <img src="https://image.flaticon.com/icons/png/512/306/306424.png" class="MyLogo" />
                    </a>
                </div>
                <div id="myNavbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="~/Home">
                                <i class="glyphicon glyphicon-home">&nbsp Home</i>
                            </a>
                        </li>

                        <li>
                            <a href="~/Jobs">
                                <i class="glyphicon glyphicon-folder-open">&nbsp Jobs</i>
                            </a>
                        </li>

                        <li>
                            <a href="~/Home/About">
                                <i class="	glyphicon glyphicon-globe">&nbsp About Us</i>
                            </a>
                        </li>

                        <li>
                            <a href="~/Home/Contact">
                                <i class="glyphicon glyphicon-envelope">&nbsp Call Us</i>
                            </a>
                        </li>

                        <li>
                            @using (Html.BeginForm("Search", "Home", FormMethod.Post))
                            {
                                <input type="text" name="searchName"
                                       id="searchName"
                                       placeholder="Search Here..." />
                            }
                        </li>
                    </ul>

                    <!--Partial login-->
                    @Html.Partial("_login")
                </div>
            </div>
        </nav>
        <!--End Of NavBar-->


        <div class="container">
            <div class="row" style="min-height:400px;">
                @RenderBody()
            </div>
        </div>
