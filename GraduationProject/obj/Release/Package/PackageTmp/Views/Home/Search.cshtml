@model IEnumerable<GraduationProject.Models.Job>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

    <div class="panel panel-info" style="margin-top:100px;">
        <div class="panel-heading"><h2>Search Result</h2></div>
        <div class="row panel-body">
            @foreach (var subitem in Model)
            {

                <div class="col-md-3 thumbnail" style="margin-left:20px; margin-bottom:20px;">
                    <img src="~/Uploads/@subitem.JobImage" style="height:200px; width:200px; margin-top:10px;" />
                    <h3>@Html.DisplayFor(modelitem => subitem.JobTitle)</h3>
                    <h5>@Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(model => subitem.JobContent).ToString()))</h5>
                    @Html.ActionLink("Details...", "Details", new { JobId = subitem.Id }, new { @class = "btn btn-primary" })
                </div>

            }
        </div>
    </div> 
